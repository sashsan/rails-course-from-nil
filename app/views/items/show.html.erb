<h2 style="color: #B00100; margin: 0 auto">show item</h2> <br/>

<h4><%= @item.name.upcase %></h4>

<ul>
  <li>Price: <%= @item.price %> $ </li>
  <li>Weight: <%= @item.weight %></li>
  <li>Description: <%= urls_to_content(@item.description) %></li>
  <li>Link: <%= urls_to_content("https://ru.wikipedia.org/wiki/%D0%A6%D0%B2%D0%B5%D1%82%D0%BE%D0%BA") %></li>
</ul><br/>

<%= button_to "edit #{@item.name}", edit_item_path, method: :get %>
<%= button_to "delete #{@item.name}", item_path(@item), method: :delete %>
<%= button_to "index", items_path, method: :get %><br/>

<%= render partial: 'shared/email' %>